<div class="container">
	<%= render 'layouts/errors', model: @user %>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">

			<div class="row" style="margin-bottom: 50px;">
				<div class="col-xs-10 col-xs-offset-1">
				<h2>Mypage Edit</h2>
			</div>
			</div>

			<div class="row">
				<div class="col-xs-5">
					<%= form_for(@user) do |f| %>

						<div class="field">
							<%= attachment_image_tag(@user, :image, size:'200x200', fallback: "no_image.jpg") %>
							<%= f.attachment_field :image, class: "user_image" %>
						</div>
				</div>
				<div class="col-xs-5">
						<div class="field row" style="margin-bottom: 15px;">
							<%= f.label :first_name, class: "col-xs-4" %>
							<%= f.text_field :first_name, class: "col-xs-5 first_name" %>
						</div>
						<div class="field row" style="margin-bottom: 15px;">
							<%= f.label :last_name, class: "col-xs-4" %>
							<%= f.text_field :last_name, class: "col-xs-5 last_name" %>
						</div>
						<div class="field row" style="margin-bottom: 15px;">
							<%= f.label :nick_name, class: "col-xs-4" %>
							<%= f.text_field :nick_name, class: "col-xs-5 nick_name" %>
						</div>
						<div class="field row" style="margin-bottom: 15px;">
							<%= f.label :introduction, class: "col-xs-4" %>
							<%= f.text_area :introduction, class: "col-xs-5 introduction" %>
						</div>
						<div class="field row" style="margin-bottom: 15px;">
							<%= f.label :email, class: "col-xs-4" %>
							<%= f.text_field :email, class: "col-xs-5 email" %>
						</div>
						<div class="row" style="margin-top: 40px;">
							<div class="col-xs-12">
								<div class="pull-left">
									<%= f.submit '変更を保存する', class: "btn btn-primary" %>
								</div>
								<div class="pull-right">
									<%= link_to '退会する', hide_user_path, class: "btn btn-danger"%>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>