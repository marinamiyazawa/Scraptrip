<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2 style="margin-bottom: 20px;">投稿一覧</h2>

			<div class="row">
				<% @posts.each do |post| %>
					<div class="col-xs-3" style="margin-right: 10px;">

						<div class="row">
							<div class="col-xs-12">
								<% post.post_images.first(1).each do |image| %>
									<%= link_to admins_post_path(post.id) do %>
									<%= attachment_image_tag(image, :image, size:'220x200', fallback: "no-image-mini.jpg", class: "scale-img") %>
									<% end %>
								<% end %>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12">
								<%= link_to admins_user_path(post.user.id) do %>
									<%= attachment_image_tag(post.user, :image, size:'50x50', fallback:"no_image.jpg") %>
								<% end %>
								<%= post.user.nick_name %>
							</div>
						</div>
						<div class="row" style="margin-bottom: 20px;">
							<div class="col-xs-12">
								<strong>Title: </strong><%= link_to post.title, admins_post_path(post.id), class: "post_#{post.id}" %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			
		</div>
	</div>
</div>