<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">

			<div class="row">
				<h2>ユーザー　一覧</h2>
			</div>

				<% @users.each do |user| %>
				<div class="row" style="margin-top: 30px; padding-bottom: 20px; border-bottom: 1px solid; border-color: silver;">
					<div class="col-xs-4">
						<%= link_to admins_user_path(user.id) do %>
							<%= attachment_image_tag(user, :image, size:'60x60', fallback: "no_image.jpg") %>
						<% end %>
					</div>
					<div class="col-xs-4">
						<%= user.nick_name %>
					</div>
					<div class="col-xs-4">
						<%= user.email %>
					</div>
				</div>
				<% end %>
				<div class="row pull-right">
				<%= paginate @users %>
				</div>
		</div>
	</div>
</div>