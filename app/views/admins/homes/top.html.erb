<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<h1> Admins top </h1>
				<% if admin_signed_in? %>
					<div class="row" style="margin-top: 100px;">
						<div class="col-xs-6">
							<div class="row">
								<h4>ユーザー数 ：<%= @users.count %> 件</h4>
							</div>
							<div class="row" style="margin-top: 100px;">
								<div class="col-xs-6 text-left">
									<%= link_to '>> もっと見る ', admins_users_path %>
								</div>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="row">
								<h4>サイトの投稿数 ：<%= @posts.count %> 件</h4>
							</div>
							<div class="row" style="margin-top: 100px;">
								<div class="col-xs-6 text-left">
									<%= link_to '>> もっと見る ', admins_posts_path %>
								</div>
							</div>
						</div>
					</div>
				<% else %>
					<div class="row" style="margin-top: 200px;">
						<div class="col-xs-6 col-xs-offset-3">
							<span><%= link_to 'Admins Log_in', new_admin_session_path, class: "btn btn-primary btn-lg" %>
							</span>
							<span>
								<%= link_to 'Admins Sign_up', new_admin_registration_path, class: "btn btn-info btn-lg" %>
							</span>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>