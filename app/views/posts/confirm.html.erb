<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>Draft Posts</h2>

			<% @posts.each do |post| %>
				<div class="row">
					<div class="col-xs-12" style="margin-top: 20px; border-bottom: 1px solid; border-color: silver;">

						<div class="row" style="margin: 10px;">
							<% post.post_images.each do |image| %>
								<%= attachment_image_tag(image, :image, size:'220x200') %>
							<% end %>
						</div>
						<div class="row" style="margin: 10px;">

							<%= link_to (post.user) do %>
								<%= attachment_image_tag(post.user, :image, size:'50x50', fallback:"no_image.jpg") %>
							<% end %>
							<%= post.user.nick_name %>
						</div>
						<div class="row" style="margin: 10px;">
							<strong>Title: </strong><%= link_to post.title, post, class: "post_#{post.id}" %>
							|
							<strong>Content: </strong><%= post.body %>
						</div>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</div>
