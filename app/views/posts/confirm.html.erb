<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2>Draft Posts</h2>

			<% @posts.each do |post| %>
				<table class="table">
					<tr>
						<% post.post_images.each do |image| %>
							<%= attachment_image_tag(image, :image, size:'60x60') %>
						<% end %>
					</tr>
					<tr>
						<th>
							<%= link_to (post.user) do %>
								<%= attachment_image_tag(post.user, :image, size:'20x20', fallback:"no_image.jpg") %>
							<% end %>
							<%= post.user.nick_name %>
						</th>
						<td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
						<td><%= post.body %></td>
					</tr>
				</table>
			<% end %>


		</div>
	</div>
</div>
