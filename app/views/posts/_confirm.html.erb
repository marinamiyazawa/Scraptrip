<% posts.each do |post| %>
	<div class="col-xs-4" style="margin-top: 20px;">

		<div class="row" style="margin: 10px;">
			<div class="col-xs-12">
				<% post.post_images.first(1).each do |image| %>
					<%= link_to edit_post_path(post.id) do %>
						<%= attachment_image_tag(image, :image, size:'220x200', class: "scale-img") %>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="row" style="margin: 10px;">
			<div class="col-xs-8" style="padding-top: 10px; padding-right: 0; margin: 0;">
				<div id="star-rate-<%= post.id %>"></div>
			</div>
			<div class="col-xs-2" style="color:silver; padding: 0; margin:0;">
				<h4 class="mb-3"><%= post.rate %></h4>
			</div>
	        <script>
	        	$('#star-rate-<%= post.id %>').raty({
		            size: 36,
		            starOff:  '<%= asset_path('star-off.png') %>',
		            starOn : '<%= asset_path('star-on.png') %>',
		            starHalf: '<%= asset_path('star-half.png') %>',
		            half: true,
		            readOnly: true,
		            score: <%= post.rate %>,
	     		 });
	        </script>
        </div>
		<div class="row" style="margin: 10px;">
			<div class="col-xs-12">
				<strong>Title: </strong><%= post.title %>
			</div>
		</div>
	</div>
<% end %>