<div class="container">
	<%= render 'layouts/errors', model: @post %>

	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="row">
				<div class="col-xs-3">
					<h2 style="margin-bottom: 30px;">新規投稿</h2>
				</div>
			</div>

			<%= render 'posts/new_form', post: @post %>

			<div class="row" style="margin-top: 60px;">
				<div class="col-xs-3">
					<h2 style="margin-bottom: 10px;">下書き</h2>
				</div>
				<div class="col-xs-12">
					<%= render 'posts/confirm', posts: @posts %>
				</div>
			</div>
		</div>
	</div>
</div>