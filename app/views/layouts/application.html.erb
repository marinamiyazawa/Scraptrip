<!DOCTYPE html>
<html>
  <head>
    <title>ScrapTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/0d02a0d965.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding-top: 30px;">
    <!--ヘッダーの記述-->
    <div class="container">
    <header>
        <h1 class="headline">
          <%= link_to root_path do %>
          <span style="color: #4682b4;">Scrap_trip</span>
          <% end %>
        </h1>
    </header>

        <nav>
          <div class="container">
            <ul class="nav-list">
              <!--if文でサインインとアウト時の表示を変更-->
              <% if user_signed_in? %>
                <li class="nav-list-item">
                  <%= link_to ' Home', user_path(current_user), class: "fas fa-house-user" %>
                </li>
                <li class="nav-list-item">
                  <%= link_to ' Posts', "", class: "far fa-clone" %>
                </li>
                <li class="nav-list-item">
                  <%=link_to "Genres", "", class: "fas fa-plane-departure" %>
                </li>
                <li class="nav-list-item">
                  <%= link_to ' logout', destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt" %>
                </li>
              <% else %>
                <li class="nav-list-item">
                  <%= link_to ' Home', root_path, class: "fas fa-house-user" %>
                </li>
                <li class="nav-list-item">
                  <%= link_to ' About', homes_about_path, class: "fas fa-suitcase-rolling" %>
                </li>
                <li class="nav-list-item">
                  <%= link_to ' sign up', new_user_registration_path, class: "fas fa-user-plus" %>
                </li>
                <li class="nav-list-item">
                  <%= link_to ' login', new_user_session_path, class: "fas fa-sign-in-alt" %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>

      </div>

    <%= yield %>
    <!--ヘッダーの記述-->
    <div class="container">
      <p id="notice"><%= notice %></p> <!--デバイスでnotice設定されているので呼び出してるだけ-->

    </div>
  </body>
</html>


